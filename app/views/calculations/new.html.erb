<!-- app/views/calculations/new.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mt-5 mb-4">簡単な計算アプリ</h1>

      <%= form_with url: calculations_create_path, local: true, data: { turbo: false } do |form| %>
        <div class="form-group">
          <%= form.label :number1, "数字1:" %>
          <%= form.text_field :number1, class: "form-control", placeholder: "Enter number 1" %>
        </div>
        <div class="form-group">
          <%= form.label :number2, "数字2:" %>
          <%= form.text_field :number2, class: "form-control", placeholder: "Enter number 2" %>
        </div>
        <div class="form-group">
          <%= form.label :operation, "操作:" %>
          <%= form.select :operation, options_for_select([["足し算", "addition"], ["引き算", "subtraction"], ["掛け算", "multiplication"], ["割り算", "division"]]), { include_blank: true }, class: "form-control" %>
        </div>
        <div class="text-center mt-4">
          <%= form.submit "計算", class: "btn btn-primary" %>
        </div>
      <% end %>

      <% if defined?(@result) %>
        <div class="mt-4">
          <h2 class="text-center">計算結果: <%= @result %></h2>
        </div>
      <% end %>
    </div>
  </div>
</div>

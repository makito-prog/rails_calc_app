<h1>簡単な計算アプリ</h1>

<%= form_with url: calculations_create_path, local: true, data: { turbo: false } do %>
  <div>
    <%= label_tag :number1, "数字1:" %>
    <%= text_field_tag :number1 %>
  </div>
  <div>
    <%= label_tag :number2, "数字2:" %>
    <%= text_field_tag :number2 %>
  </div>
  <div>
    <%= label_tag :operation, "操作:" %>
    <%= select_tag :operation, options_for_select([["足し算", "addition"], ["引き算", "subtraction"], ["掛け算", "multiplication"], ["割り算", "division"]]) %>
  </div>
  <div>
    <%= submit_tag "計算", class: "btn btn-primary" %>
  </div>
<% end %>

<% if defined?(@result) %>
  <h2>計算結果: <%= @result %></h2>
<% end %>
